				}
			}
			useOR++;
		}
		else 
		{*/
		for (int i = 0; checkOR[i] != NULL; i++)
		{
			parseSemiAND(checkOR[i], argv);
		}
		for (int i = 0; argv[i] != NULL; i++)
		{
			argv1[i] = new char*[500];
			parseSpace(argv[i], argv1[i]);
		}

		//}
		for (int i = 0; argv1[i] != NULL; i++)
