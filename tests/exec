	memset(userinput, 0, 500); //Set all to 0 for fresh input
	memset(argv, 0, 500);
	do
	{
		loginInfo(login, hostname, hostLength);
		int forkID = 0;
		cout << login << "@" << hostname << "$ ";
		cin.getline(userinput, 500, '\n');
		parseComment(userinput, checkComment);
		//copyOfInput = strdup(checkComment[0]);	
